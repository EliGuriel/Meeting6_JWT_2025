classDiagram
    class ReactClient{
        +sessionStorage
        +JWT Token
        +Refresh Token
        +AuthInterceptorService
        +login()
        +logout()
        +getProtectedData()
    }

    class SpringBootServer{
        +AuthenticationController
        +JwtUtil
        +RefreshTokenService
        +FlaskProxyController
        +SecurityConfig
        +authenticate()
        +refreshToken()
        +proxyToFlask()
    }

    class FlaskServer{
        +token_required
        +proxy_required
        +JWT_SECRET_KEY
        +get_data()
        +get_admin_data()
        +get_proxy_data()
    }

    class Database{
        +Users
        +Roles
        +RefreshTokens
    }

    ReactClient --> SpringBootServer: authenticates
    ReactClient --> FlaskServer: direct API calls
    SpringBootServer --> FlaskServer: proxy requests
    SpringBootServer --> Database: CRUD operations